@using PCVMS.Presentation.Helpers;
@inject ICacheHelper obj;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Localizer = await obj.GetAllResource();

}

@model PCVMS.Model.Web.PCVMS_Project_Model


    <div class="main-card mb-3 card">
      
        <div class="card-body">
          
                <div class="main-card mb-3 card">
                    <div class="card-body">
                        <div class="card-header-custom  bg-moi-green">
                            <i class="header-icon pe-7s-pen icon-gradient bg-white"> </i>
                            @Localizer["site visit request"]
                        </div>
                            <div class="form-row">

                                <div class="col-md-6">
                                    <div class="position-relative form-group">
                                        <label for="RoyalDecree">
                                            @Localizer["project name"]

                                        </label>
                                        <div class="input-group">
                                            <select id="ealist" class="form-control">
                                                <option>@Localizer["batna road"]</option>
                                                <option>@Localizer["batna road"]</option>
                                                <option>@Localizer["rasal jinz tortile resort"]</option>
                                                <option>@Localizer["rasal jinz tortile resort"]</option>
                                            </select>
                                            <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-bookmarks btn-icon-wrapper"> </i></span></div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="position-relative form-group">
                                        <label for="ProjectName">@Localizer["status"]</label>
                                        <div class="widget-content-left">
                                            <div class="input-group">
                                                <select id="ealist" class="form-control">
                                                    <option selected>@Localizer["select status"]</option>
                                                    <option>@Localizer["pending"]</option>
                                                    <option>@Localizer["approved"]</option>

                                                </select>
                                                <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-speaker btn-icon-wrapper"> </i></span></div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="position-relative form-group">
                                        <label for="ProjectName" style="visibility:hidden">@Localizer["cr"]</label>
                                        <div class="widget-content-left">
                                            <div class="input-group">
                                                <button id="SearchTransaction" name="SearchTransaction" class="btn-icon btn-shadow btn-dashed btn btn-alternate block-page-btn-example-3">
                                                    <i class="pe-7s-search btn-icon-wrapper"> </i>@Localizer["search"]
                                                </button>

                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <table style="width: 100%;" id="tbl-resource-history" name="tbl-resource-history" class="table table-hover table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th class="bg-moi-gold" style="text-align:center"><i class="pe-7s-album btn-icon-wrapper"> </i> @Localizer["project id"]</th>
                                        <th class="bg-moi-gold" style="text-align:center"><i class="pe-7s-magic-wand btn-icon-wrapper"> </i> @Localizer["project name"]</th>
                                        <th class="bg-moi-gold" style="text-align:center;"><i class="pe-7s-magic-wand btn-icon-wrapper"> </i>Visit Date</th>
                                        <th class="bg-moi-gold" style="text-align:center;"><i class="pe-7s-magic-wand btn-icon-wrapper"> </i>Visit Type</th>
                                        <th class="bg-moi-gold" style="text-align:center;"><i class="pe-7s-magic-wand btn-icon-wrapper"> </i> @Localizer["approved by ea"]</th>
                                        <th class="bg-moi-gold" style="text-align:center;"><i class="pe-7s-magic-wand btn-icon-wrapper"> </i> @Localizer["approved by director"]</th>
                                        <th class="bg-moi-gold" style="text-align:center;"><i class="pe-7s-magic-wand btn-icon-wrapper"> </i> @Localizer["action"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="text-center text-muted">1231</td>
                                        <td class="text-center">al batinah coastal road</td>
                                        <td class="text-center">11/11/2021</td>
                                        <td class="text-center">Engineer</td>
                                        <td class="text-center">Approved</td>
                                        <td class="text-center">Pending</td>
                                        <td class="text-center" id='tdAction' name='tdAction'><div class='position-relative'><i class="metismenu-icon lnr-book" style="cursor: pointer;margin-left: 10px;" title="view"></i></div></td>
                                    </tr>
                                    <tr>
                                        <td class="text-center text-muted">11175</td>
                                        <td class="text-center">salalah road</td>
                                        <td class="text-center">11/11/2021</td>
                                        <td class="text-center">Engineer</td>
                                        <td class="text-center">Approved</td>
                                        <td class="text-center">Approved</td>
                                        <td class="text-center" id='tdAction' name='tdAction'><div class='position-relative'><i class="metismenu-icon lnr-book" style="cursor: pointer;margin-left: 10px;" title="view"></i></div></td>
                                    </tr>
                                    <tr>
                                        <td class="text-center text-muted">11176</td>
                                        <td class="text-center">salalah road</td>
                                        <td class="text-center">21/12/2021</td>
                                        <td class="text-center">PCVC Committee</td>
                                        <td class="text-center">Pending</td>
                                        <td class="text-center">Pending</td>
                                        <td class="text-center" id='tdAction' name='tdAction'><div class='position-relative'><i class="metismenu-icon lnr-book" style="cursor: pointer;margin-left: 10px;" title="view"></i></div></td>
                                    </tr>
                                </tbody>
                            </table>

                    
                    </div>
                </div>
                <div id="site-visit-request-view" class="main-card mb-3 card">
                    <div class="card-header-custom  bg-moi-green">
                        <i class="header-icon pe-7s-pen icon-gradient bg-royal"> </i>

                        @Localizer["site visit detail"]
                    </div>
                    <div class="card-body">
                        <div class="form-row">
                            <div class="col-md-4">
                                <div class="position-relative form-group">
                                    <label for="RoyalDecree">
                                        @Localizer["project name"]

                                    </label>
                                    <div class="input-group">
                                        <select id="ealist" class="form-control">
                                            <option>@Localizer["batna road"]</option>
                                            <option>@Localizer["batna road"]</option>
                                            <option>@Localizer["rasal jinz tortile resort"]</option>
                                            <option>@Localizer["rasal jinz tortile resort"]</option>
                                        </select>
                                        <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-bookmarks btn-icon-wrapper"> </i></span></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="position-relative form-group">
                                    <label for="ProjectStartDate">@Localizer["start date"] </label>

                                    <div class="input-group">
                                        <input name="disputeStartDate" id="disputeStartDate" type="text" class="form-control">
                                        <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-date btn-icon-wrapper"> </i></span></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="position-relative form-group">
                                    <label for="ProjectStartDate">@Localizer["end date"] </label>

                                    <div class="input-group">
                                        <input name="disputeEndDate" id="disputeEndDate" type="text" class="form-control">
                                        <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-date btn-icon-wrapper"> </i></span></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="position-relative form-group">
                                    <label for="ProjectStartDate">@Localizer["site visit request no"] </label>

                                    <div class="input-group">
                                        <input readonly="readonly" name="disputeEndDate" id="disputeEndDate" type="text" class="form-control">
                                        <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-date btn-icon-wrapper"> </i></span></div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="position-relative form-group">
                                    <label for="exampleAddress">@Localizer["site visit detail"]</label>


                                    <div class="input-group">
                                        <input name="txtremark" id="txtremark" placeholder="please enter here..." type="text" class="form-control">
                                        <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-notebook btn-icon-wrapper"> </i></span></div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-md-10">
                                <div class="position-relative form-group">
                                    <label for="exampleAddress">@Localizer["approver remark"]</label>
                                    <div class="input-group">
                                        <input readonly="readonly" name="txtremark" id="txtremark" placeholder="ready only..." type="text" class="form-control">
                                        <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-notebook btn-icon-wrapper"> </i></span></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="position-relative form-group">
                                    <label for="exampleAddress">@Localizer["current status"]</label>
                                    <div class="input-group">
                                        <input readonly="readonly" name="txtremark" id="txtremark" placeholder="draft..." type="text" class="form-control">
                                        <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-notebook btn-icon-wrapper"> </i></span></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                

                </div>
          
        </div>
    </div>
<script src="~/AppJs/Project.js"></script>
