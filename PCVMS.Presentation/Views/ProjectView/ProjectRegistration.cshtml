@using PCVMS.Presentation.Helpers;
@inject ICacheHelper obj;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Localizer = await obj.GetAllResource();

}

@model PCVMS.Model.Web.PCVMS_Project_Model

    <div class="main-card mb-3 card">
        <div class="row">
            <div class="col-lg-12 col-md-12">

                <div class="card-header  bg-moi-blue-light">
                    <i class="header-icon pe-7s-pen icon-gradient bg-white"> </i>
                    <h1>@Localizer["project management module"]</h1>
                </div>


            </div>

        </div>

        <div class="form-row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="position-relative form-group">
                    <label for="exampleEmail2" id="lbl_stage3_name"><span class="text-danger">*</span>@Localizer["select project name"]</label>
                    <div class="input-group">
                        @Html.DropDownListFor(model => model.ProjectId, Model.ProjectList, "al batinah coastal road", new { @class = "form-control" })
                        <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-way btn-icon-wrapper"> </i></span></div>
                    </div>

                </div>
            </div>
            <div class="col-md-3"></div>
        </div>



        <div class="main-card mb-3 card">
            <div class="card-header-custom  bg-moi-green">
                <i class="header-icon pe-7s-pen icon-gradient bg-white"> </i>
                @Localizer["project information"]
            </div>

            <div id="smartwizard-project-registration-view">
                <div class="card-body">

                    <div class="form-row">
                        <div class="col-md-4">

                            <label for="exampleEmail" class=""><span class="text-danger">*</span> @Localizer["is royal decree"]?</label>


                        </div>
                        <div class="col-md-4">

                            <label for="exampleName" class=""><span class="text-danger">*</span>@Localizer["is consultant assigned?"]</label>


                        </div>
                        <div class="col-md-4">

                            <label for="examplePassword" class="">@Localizer["project id"]</label>


                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4">
                            <div class="position-relative form-group">

                                <input class="form-control" type="checkbox" id="chk-royal-decree" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="danger">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="position-relative form-group">

                                <input class="form-control" type="checkbox" id="chk-consultant" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="danger">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="position-relative form-group">

                                <input name="id" id="id" value="55" type="text" class="form-control" readonly="readonly">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-header-custom  bg-moi-green">
                    <i class="header-icon pe-7s-pen icon-gradient bg-white"> </i>

                    @Localizer["detail information"]
                </div>
                <div class="card-body">
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="position-relative form-group">
                                <label for="exampleEmail2" id="lbl_stage3_name"> @Localizer["project type"] </label>

                                <div class="input-group">
                                    @Html.DropDownListFor(model => model.ProjectType, Model.ProjectTypeList, "Valuation and Compensation", new { @class = "form-control" })
                                    <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-speaker btn-icon-wrapper"> </i></span></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="position-relative form-group">

                                <label for="RoyalDecree">
                                    @Localizer["royal decree"]

                                </label>
                                <div class="input-group">
                                    <input name="txt_stage3_vehicletype" id="RoyalDecree" type="text" class="form-control" value="36/2008">
                                    <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-bookmarks btn-icon-wrapper"> </i></span></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="position-relative form-group">
                                <label for="RoyalDecreeDate">@Localizer["royal decree date"]  </label>
                                <div class="input-group datepicker-click-royaldecreedate">
                                    <input name="RoyalDecreeDate" id="RoyalDecreeDate" type="text" value="24/03/2008" class="form-control" data-toggle="datepicker-trigger-royaldecreedate">
                                    <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-date btn-icon-wrapper"> </i></span></div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="position-relative form-group">
                                <label for="ProjectName">@Localizer["project name"]</label>
                                <div class="input-group">
                                    <input name="ProjectName" id="ProjectName" type="text" class="form-control" value="al batinah coastal road">
                                    <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-rocket btn-icon-wrapper"> </i></span></div>
                                </div>

                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="position-relative form-group">
                                <label for="ProjectStartDate">@Localizer["start date"] </label>

                                <div class="input-group  datepicker-click-projectstartdate">
                                    <input name="ProjectStartDate" id="ProjectStartDate" value="11/11/2008" type="text" class="form-control" data-toggle="datepicker-trigger-projectstartdate">
                                    <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-date btn-icon-wrapper" style="cursor: pointer;"> </i></span></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="position-relative form-group">
                                <label for="ProjectEndDate">@Localizer["end date"] </label>

                                <div class="input-group">
                                    <input name="ProjectEndDate" id="ProjectEndDate" type="text" value="11/11/2013" class="form-control">
                                    <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-date btn-icon-wrapper"> </i></span></div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="position-relative form-group">
                                <label for="exampleAddress">@Localizer["remark"]</label>


                                <div class="input-group">
                                    <input name="txtremark" id="txtremark" value="This is a sample project" type="text" class="form-control">
                                    <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-notebook btn-icon-wrapper"> </i></span></div>
                                </div>
                            </div>
                        </div>
                    </div>



                </div>

                <div class="card-body">
                    <div class="card-header-custom  bg-moi-green">
                        <i class="header-icon pe-7s-pen icon-gradient bg-white"> </i>
                        @Localizer["attached documents"]
                    </div>
                    <table style="width: 100%;" id="tbl-ProjectDocument" name="tbl-ProjectDocument" class="table table-hover table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="bg-moi-gold" style="text-align:center"><i class="pe-7s-id btn-icon-wrapper"> </i> @Localizer["s.no"]</th>
                                <th class="bg-moi-gold" style="text-align:center"><i class="pe-7s-album btn-icon-wrapper"> </i> @Localizer["media"]</th>
                                <th class="bg-moi-gold" style="text-align:center"><i class="pe-7s-album btn-icon-wrapper"> </i> @Localizer["document type"]</th>
                                <th class="bg-moi-gold" style="text-align:center"><i class="pe-7s-magic-wand btn-icon-wrapper"> </i> @Localizer["action"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-center text-muted">11</td>
                                <td class="text-center">Royal Decree</td>
                                <td class="text-center">Royal Decree</td>
                                <td class="text-center" id='tdAction' name='tdAction'><div class='position-relative'><i class="metismenu-icon lnr-book" style="cursor: pointer;margin-left: 10px;" title="view"></i></div></td>

                            </tr>
                            <tr>
                                <td class="text-center text-muted">12</td>
                                <td class="text-center">Project Drawing</td>
                                <td class="text-center">Project Drawing</td>
                                <td class="text-center" id='tdAction' name='tdAction'><div class='position-relative'><i class="metismenu-icon lnr-book" style="cursor: pointer;margin-left: 10px;" title="view"></i></div></td>

                            </tr>
                            <tr>
                                <td class="text-center text-muted">12</td>
                                <td class="text-center">Buliding Property</td>
                                <td class="text-center">Property Document</td>
                                <td class="text-center" id='tdAction' name='tdAction'><div class='position-relative'><i class="metismenu-icon lnr-book" style="cursor: pointer;margin-left: 10px;" title="view"></i></div></td>

                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>






    </div>
<script src="~/AppJs/Project.js"></script>
