@using PCVMS.Presentation.Helpers;
@inject ICacheHelper obj;
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Localizer = await obj.GetAllResource();
}
<style>
    #total_project, #remain_cost {
        text-align: center;
        color: chartreuse;
        font-size: 40px;
        padding: 30px;
    }

    #total_project {
        font-size: 50px;
    }
    .card {
        margin-bottom: 10px !important;
    }
    .badge{
        background-color: aquamarine;
    padding: 8px 10px 7px;
    border-radius: 20px;
    }
    .table thead tr {
        font-size: 20px;
        padding: 10px;
    }
</style>

<div class="dashboard">
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="main-card mb-3 card">
                <div class="card-header  bg-happy-green">
                    <i class="header-icon pe-7s-pen icon-gradient bg-royal"> </i>
                    <h1>Dashboard</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">Total Project</div>
                <div class="card-body">
                    <div id="total_project"></div>
                </div>
            </div>
            <div class="card">
                <div class="card-header">Remaining cost</div>
                <div class="card-body">
                    <div id="remain_cost"></div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Year Wise Project</div>
                <div class="card-body">
                    <canvas id="wiseCart"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">Project in Department</div>
                <div class="card-body">
                    <canvas id="departCart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Project Progress Payment</div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Department</th>
                                <th>Progress</th>
                                <th>Payment</th>
                                <th>Trend</th>
                            </tr>
                        </thead>
                        <tbody id="paymentTable">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">Project Risk</div>
                <div class="card-body">
                    <canvas id="rishCart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Project Completion & Pending</div>
                <div class="card-body">
                    <canvas id="pendingChart"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">CashFlow</div>
                <div class="card-body">
                    <canvas id="cashChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Project Delay</div>
                <div class="card-body">
                    <canvas id="delayChart"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Project Ret Amt</div>
                <div class="card-body">
                    <canvas id="amtCart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.2/raphael-min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/prettify/r224/prettify.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
<script src="https://cdn.jsdelivr.net/gh/emn178/chartjs-plugin-labels/src/chartjs-plugin-labels.js"></script>

<script type="text/javascript">
    var apiUrl = '@Url.Action("GetJsonData")';
</script>
@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="~/js/Dashboard/dashboard.js"></script>
}