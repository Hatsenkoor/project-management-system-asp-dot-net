
@using PCVMS.Presentation.Helpers;
@inject ICacheHelper obj;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Localizer = await obj.GetAllResource();
}

    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="main-card mb-3 card">
                <div class="card-header  bg-happy-green">
                    <i class="header-icon pe-7s-pen icon-gradient bg-royal"> </i>
                    <h1> @Localizer["valuation foundation registration"]</h1>
                </div>
            </div>

        </div>

    </div>

<div class="row">

    <div class="col-lg-12 col-md-12">

        <div id="ProjectDiv" class="main-card mb-3 card">
            <div class="card-header-custom  bg-happy-green">
                <i class="header-icon pe-7s-pen icon-gradient bg-royal"> </i>

                @Localizer["valuation foundation"]
            </div>
            <div class="card-body">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="position-relative form-group">
                            <label for="RoyalDecree">
                                @Localizer["valuation foundation name"]

                            </label>
                            <div class="input-group">
                                <input name="disputeEndDate" id="disputeEndDate" type="text" class="form-control">
                                <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-date btn-icon-wrapper"> </i></span></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="position-relative form-group">
                            <label for="ProjectStartDate">@Localizer["start date"] </label>

                            <div class="input-group">
                                <input name="disputeStartDate" id="disputeStartDate" type="text" class="form-control">
                                <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-date btn-icon-wrapper"> </i></span></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="position-relative form-group">
                            <label for="ProjectStartDate">@Localizer["end date"] </label>

                            <div class="input-group">
                                <input name="disputeEndDate" id="disputeEndDate" type="text" class="form-control">
                                <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-date btn-icon-wrapper"> </i></span></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-10">
                        <div class="position-relative form-group">
                            <label for="exampleAddress">@Localizer["remark"]</label>
                            <div class="input-group">
                                <input name="txtremark" id="txtremark" placeholder="enetr here..." type="text" class="form-control">
                                <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-notebook btn-icon-wrapper"> </i></span></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="position-relative form-group">
                            <label for="exampleAddress">@Localizer["current status"]</label>
                            <div class="input-group">
                                <input name="txtremark" id="txtremark" placeholder="active" type="text" class="form-control">
                                <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-notebook btn-icon-wrapper"> </i></span></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="main-card mb-3 card">
                <div class="card-header-custom  bg-happy-green">
                    <i class="header-icon pe-7s-pen icon-gradient bg-royal"> </i>
                    @Localizer["upload quotation"]
                </div>

                <div class="card-body">
                    <div class="form-row">

                        <div class="col-md-5">
                            <div class="position-relative form-group">
                                <label for="exampleEmail2">@Localizer["please, upload latest valuation foundation"]</label>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="position-relative form-group">
                                <img name="email" id="ProjectImage1" height="18" width="24">
                                <input type="hidden" id="Image1" height="18" width="24">

                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="position-relative form-group">
                                <input id="ProjectFile1" name="ProjectFile1" accept=".jpg,.jpeg" type="file" size="1" multiple onchange="uploadFiles(this);" />

                            </div>
                        </div>

                    </div>
                  
                </div>
                <div class="card-body">
                    <table style="width: 100%;" id="tbl-ProjectDocument" name="tbl-ProjectDocument" class="table table-hover table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="bg-deep-blue" style="text-align:center"><i class="pe-7s-id btn-icon-wrapper"> </i> @Localizer["s. no"]</th>
                                <th class="bg-deep-blue" style="text-align:center"><i class="pe-7s-album btn-icon-wrapper"> </i> @Localizer["file name"]</th>
                                <th class="bg-deep-blue" style="text-align:center"><i class="pe-7s-magic-wand btn-icon-wrapper"> </i> @Localizer["action"]</th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <td>1</td>
                                <td>Special case quotation 1</td>
                                <td><i class="metismenu-icon pe-7s-browser"></i></td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
            <div class="d-block text-right card-footer">

                <input name="txtid" id="txtid" type="text" style="visibility:hidden" />
                <button id="btnClear" name="btnClear" class="mb-2 mr-2 btn-icon btn-shadow btn-dashed btn btn-outline-danger"><i class="pe-7s-trash btn-icon-wrapper"> </i>@Localizer["clear"]</button>
                <button id="SaveTransaction" name="SaveTransaction" class="mb-2 mr-2 btn-icon btn-shadow btn-dashed btn btn-outline-success"><i class="pe-7s-diskette btn-icon-wrapper"> </i>@Localizer["save"]</button>
                <button id="SaveTransaction" name="SaveTransaction" class="mb-2 mr-2 btn-icon btn-shadow btn-dashed btn btn-outline-success"><i class="pe-7s-trash btn-icon-wrapper"> </i>@Localizer["delete"]</button>

            </div>

        </div>

        <div class="main-card mb-3 card">
            <div class="main-card mb-3 card">
                <div class="no-gutters row">
                    <div class="col-md-2">
                        <div class="widget-content">
                            <div class="widget-content-wrapper">
                                <div class="widget-content-right ml-0 mr-3">
                                    <div class="widget-heading text-success">@Localizer["search filter"]</div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="widget-content">
                            <div class="widget-content-wrapper">
                                <div class="widget-content-right ml-2 mr-3">
                                    <div class="widget-heading">@Localizer["valuation foundation"]</div>
                                </div>
                                <div class="widget-content-left">


                                    <div class="input-group">
                                        <input name="txt-filter-english" id="txt-filter-english" type="text" placeholder="enter here..." class="form-control">
                                        <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-search btn-icon-wrapper"> </i></span></div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="widget-content">
                            <div class="widget-content-wrapper">
                                <div class="widget-content-right ml-0 mr-4">
                                    <div class="widget-heading">@Localizer["status"]</div>
                                </div>
                                <div class="widget-content-left">

                                    <div class="input-group">
                                        <input name="txt-filter-arabic" id="txt-filter-arabic" type="text" placeholder="enter here..." class="form-control">
                                        <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-search btn-icon-wrapper"> </i></span></div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="widget-content">
                            <div class="widget-content-wrapper">
                                <div class="widget-content-right ml-0 mr-3">

                                    <button id="SearchTransaction" name="SearchTransaction" class="mb-2 mr-2 btn-icon btn-shadow btn-dashed btn btn-outline-success block-page-btn-example-3">
                                        <i class="pe-7s-search btn-icon-wrapper"> </i>@Localizer["search"]
                                    </button>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table style="width: 100%;" id="tbl-resource-history" name="tbl-resource-history" class="table table-hover table-striped table-bordered">
                    <thead>
                        <tr>
                            <th class="bg-deep-blue" style="text-align:center"><i class="pe-7s-album btn-icon-wrapper"> </i> @Localizer["id"]</th>
                            <th class="bg-deep-blue" style="text-align:center"><i class="pe-7s-magic-wand btn-icon-wrapper"> </i> @Localizer["name"]</th>
                            <th class="bg-deep-blue" style="text-align:center;"><i class="pe-7s-magic-wand btn-icon-wrapper"> </i> @Localizer["status"]</th>
                            <th class="bg-deep-blue" style="text-align:center;"><i class="pe-7s-magic-wand btn-icon-wrapper"> </i> @Localizer["action"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>2</td>
                            <td>Valuation Foundation 2021</td>
                            <td>Active</td>
                            <td id='tdAction' name='tdAction'><div class='position-relative form-check'><input name='radiobtnselection' id='radiobtnselection' type='radio' class='form-check-input'></div></td>
                        </tr>
                        <tr>
                            <td>1</td>
                            <td>Valuation Foundation 2010</td>
                            <td>Deactive</td>
                            <td id='tdAction' name='tdAction'><div class='position-relative form-check'><input name='radiobtnselection' id='radiobtnselection' type='radio' class='form-check-input'></div></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </div>

</div>

<!-- Disable tap highlight on IE -->
<meta name="msapplication-tap-highlight" content="no">

