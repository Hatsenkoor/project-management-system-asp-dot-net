
@using PCVMS.Presentation.Helpers;
@inject ICacheHelper obj;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Localizer = await obj.GetAllResource();
}

<div class="row">

    <div class="col-lg-12 col-md-12">

        <div class="main-card mb-3 card">
            <div class="card-header  bg-moi-green">
                <i class="header-icon pe-7s-pen icon-gradient bg-royal"> </i>
                @Localizer["arabic_english_translation"]  
            </div>
            <div class="card-body">
                <div class="mx-auto app-login-box col-sm-12 col-md-10 col-lg-12">
                    <div class="divider row"></div>
                    <div class="form-row">
                        <div class="col-md-3">
                            <div class="position-relative form-group"><label for="Username" class="">@Localizer["english"]</label></div>
                        </div>
                        <div class="col-md-9">

                            <div class="position-relative form-group">

                                <div class="input-group">
                                    <input name="txtName" id="txtName" placeholder="english here..." class="form-control">
                                    <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-note btn-icon-wrapper"> </i></span></div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-3">
                            <div class="position-relative form-group"><label for="Username" class="">@Localizer["arabic"]</label></div>
                        </div>
                        <div class="col-md-9">

                            <div class="position-relative form-group">

                                <div class="input-group">
                                    <input name="txtValue" id="txtValue" placeholder="arabic here..." class="form-control">
                                    <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-notebook btn-icon-wrapper"> </i></span></div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="d-block text-right card-footer">
                <input name="txtid" id="txtid" type="text" style="visibility:hidden" />
                <button id="btnClear" name="btnClear" class="btn-icon btn-shadow btn-dashed btn btn-moi-gold"><i class="pe-7s-trash btn-icon-wrapper"> </i>@Localizer["clear"]</button>
                <button id="SaveTransaction" name="SaveTransaction" class="btn-icon btn-shadow btn-dashed btn btn-alternate block-page-btn-example-3">
                    <i class="pe-7s-search btn-icon-wrapper"> </i>@Localizer["save"]
                </button>
            </div>
        </div>
         
        <div class="main-card mb-3 card">
            <div class="card-header-custom  bg-moi-green">
                <i class="header-icon pe-7s-pen icon-gradient bg-white"> </i>
              @Localizer["resource_search"]
            </div>
          
            <div class="card-body">
             
                <div class="form-row">
                    <div class="col-md-4">
                        <div class="position-relative form-group">
                            <label for="RoyalDecree">
                                @Localizer["english"]

                            </label>
                            <div class="input-group">
                                <input name="txt-filter-english" id="txt-filter-english" type="text" placeholder="search text here..." class="form-control">
                                <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-search btn-icon-wrapper"> </i></span></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="position-relative form-group">
                            <label for="ProjectName">@Localizer["arabic"]</label>
                            <div class="widget-content-left">
                                <div class="input-group">
                                    <input name="txt-filter-english" id="txt-filter-english" type="text" placeholder="search text here..." class="form-control">
                                    <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-search btn-icon-wrapper"> </i></span></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-2">
                        <div class="position-relative form-group">
                            <label for="ProjectName" style="visibility:hidden"></label>
                            <div class="widget-content-left">
                                <div class="input-group">
                                    <button id="SearchTransaction" name="SearchTransaction" class="btn-icon btn-shadow btn-dashed btn btn-alternate block-page-btn-example-3">
                                        <i class="pe-7s-search btn-icon-wrapper"> </i>@Localizer["search"]
                                    </button>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <table style="width:100%;table-layout:fixed;" id="tbl-resource-history" name="tbl-resource-history" class="table table-hover table-striped table-bordered" >
                    <thead>
                        <tr>
                            <th class="bg-moi-gold" style="text-align:center"><i class="pe-7s-album btn-icon-wrapper"> </i> @Localizer["key"]</th>
                            <th class="bg-moi-gold" style="text-align:center"><i class="pe-7s-magic-wand btn-icon-wrapper"> </i> @Localizer["name"]</th>
                            <th class="bg-moi-gold" style="text-align:center;"><i class="pe-7s-magic-wand btn-icon-wrapper"> </i> @Localizer["value"]</th>
                            <th class="bg-moi-gold" style="text-align:center;"><i class="pe-7s-magic-wand btn-icon-wrapper"> </i> @Localizer["action"]</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            </div>

    </div>

</div>

<!-- Disable tap highlight on IE -->
<meta name="msapplication-tap-highlight" content="no">

<script type="module" src="~/js/Resource.js"></script>
