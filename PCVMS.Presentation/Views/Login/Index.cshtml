@using System.Threading;
@using PCVMS.Presentation.Helpers;
@inject ICacheHelper obj;

@{
    var browserLang = Thread.CurrentThread.CurrentCulture.Name;
    var dir = "";
    if (browserLang.ToLower() == "en-us")
    {
        dir = "ltr";
    }
    else
    {
        dir = "rtl";
    }
    Layout = null;
    var Localizer = await obj.GetAllResource(); ;
}

<!doctype html>

<html dir="@dir" lang="en-us">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Language" content="en">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@Localizer["system_title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no" />
    <meta name="description" content="MAFWR (Ministry of Agriculture Fisheries Wealth & Water Resources )">

    <!-- Disable tap highlight on IE -->
    <meta name="msapplication-tap-highlight" content="no">

    <link href="~/css/Custom.css" rel="stylesheet" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

    @if (browserLang.ToLower() == "en-us")
    {
        <link href="~/css/main.87c0748b313a1dda75f5.css" rel="stylesheet" />
        <link href="~/css/Custom-en.css" rel="stylesheet" />
    }
    else

    {
        <link href="~/css/main.ca0da237c3c8d04a414c.css" rel="stylesheet" />
        <link href="~/css/Custom-ar.css" rel="stylesheet" />
    }

    <script src="~/js/jquery-3.4.1.min.js" crossorigin="anonymous"></script>

</head>

<body>
    <div class="app-container  body-tabs-shadow">
        <div class="app-container">
            <div class="h-100">
                <div class="h-100 no-gutters row">
                    
                        <div class="d-lg-flex d-xs-none justify-content-center align-items-center col-md-12 col-lg-9 custom-container">
                            <div class="position-relative d-flex justify-content-center align-items-center" tabindex="-1">
                                @*<video style="width:100%;" id="videoplay" src="~/images/hermann_ar.mp4" type="video/mp4" autoplay autobuffer loop>*@
                                    <video style="width:100%;" id="videoplay" autoplay autobuffer loop>
                                        <div class="fallback"> <p>You must have an HTML5 capable browser.</p> </div>
                                    </video>
</div>
                        </div>
                   
                    <div class="h-100 d-flex justify-content-center align-items-center col-md-12 col-lg-3">
                        <div class="mx-auto app-login-box col-sm-12 col-md-10 col-lg-9">
                          <h1 class="mb-0 bg-login-green">
                                <span class="d-block">@Localizer["system_name"]</span>
                            </h1>
                            <div class="divider row"></div>
                            <h4 class="mb-0">
                                <span>@Localizer["login_page_message"]</span>
                            </h4>
                            <div class="divider row"></div>
                            <div>
                                <form form" method="post" action="~/Login/Index">
                                 
                                        <div class="col-md-12">
                                            <div class="position-relative form-group"><label for="Username" class="">@Localizer["user"]</label></div>
                                        </div>
                                        <div class="col-md-12">

                                            <div class="position-relative form-group">

                                                <div class="input-group">
                                                    <input name="Username" id="Username" placeholder="Email here..."  class="form-control">
                                                    <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-mail btn-icon-wrapper"> </i></span></div>
                                                </div>

                                            </div>
                                        </div>
                                
                                  
                                        <div class="col-md-12">
                                            <label for="examplePassword" class="">@Localizer["password"]</label>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="position-relative form-group">

                                                <div class="input-group">
                                                    <input name="Password" id="Password" placeholder="Password here..." type="password" class="form-control">
                                                    <div class="input-group-append"><span class="input-group-text"><i class="pe-7s-lock btn-icon-wrapper"> </i></span></div>
                                                </div>
                                            </div>
                                        </div>
                                
                                    <div class="divider row"></div>
                                    <div class="form-row">
                                        <div class="col-md-12">
                                            <div class="d-flex align-items-center">

                                                <button class="mb-2 mr-2 btn-icon-vertical btn-shadow btn-dashed btn btn-outline-success btn-lg btn-block block-page-btn-example-3"><i class="pe-7s-door-lock btn-icon-wrapper"> </i>@Localizer["login"]</button>

                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>

<script type="text/javascript" src="~/js/loadingvideo.js"></script>

</html>
